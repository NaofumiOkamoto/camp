<h1>キャンプ場詳細</h1>
<table>
  <tr><td><%= @camp_site.id %></td></tr>
  <tr><td><%= @camp_site.name %></td></tr>
  <tr><td><%= @camp_site.area %></td></tr>
  <tr><td><%= @camp_site.prefecture_name %></td></tr>
  <tr><td><%= @camp_site.address %></td></tr>
  <tr><td><%= @camp_site.category_name %></td></tr>
  <tr><td><%= @camp_site.introduction %></td></tr>
    <% if @camp_site.camp_image.attached? %>
      <tr><td><%= image_tag @camp_site.camp_image, class: "camp-site-image" %></td></tr>
    <% end %>
    <%= render 'like_camps/like_camp_site', camp_site: @camp_site %>
</table>

<!-- 掲示板 -->
<h2>募集掲示板</h2>
  <% @boards.each do |board| %>
<div>
    <%= board.user.nickname %>
    <%= board.purpos_name %>
    <%= board.condition %>
    <%= board.date %>
    <%= board.time %>
    <%= board.place %>
    <%= link_to '詳細', board_path(board.id), class: "btn btn-primary" %>
    気になる数<%= board.like_boards.count %>
  <% end %>
</div>

<!-- チャット -->
<div id="messages" data-camp_site_id="<%= @camp_site.id %>">
  <%= render @messages %>
</div>
<%= label nil, nil, 'コメント入力' %>
<%= text_field nil, nil, 'data-behavior': 'room_speaker' %>
