<div class="container camp-site-show-page">
  <div class="row">
      <div class="col-xs-8 camp-show-image-col">
        <% if @camp_site.camp_images.attached? %>
          <%= image_tag @camp_site.camp_images.first, class: "camp-site-show-image-0" %>
      </div>
      <div class="col-xs-4 camp-show-image-col">
            <% if @camp_site.camp_images[1..2].empty? %>
              <%= image_tag '/assets/tent.png', class: "camp-site-show-image" %>
              <%= image_tag '/assets/tent.png', class: "camp-site-show-image" %>
            <% elsif @camp_site.camp_images[2].empty? %>
              <%= image_tag '/assets/tent.png', class: "camp-site-show-image" %>
            <% else %>
              <% @camp_site.camp_images[1..2].each do |image| %>
                <%= image_tag image, class: "camp-site-show-image" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
<hr>
    <!-- 掲示板 -->
<div class="container camp-site-show-page-body">
  <div class="row">

    <div class="col-xs-3 camp-site-subtitle camp-site-subtitle-info">
      <h3 class="">キャンプ情報</h3>
    </div>
    <div class="col-xs-3 camp-site-subtitle camp-site-subtitle-board">
      <h3 class="">募集掲示板(<%= @camp_site.boards.size %>)件</h3>
    </div>
    <div class="col-xs-3 camp-site-subtitle camp-site-subtitle-chat">
      <h3 class="">チャットルーム</h3>
    </div>
    <div class="col-xs-3 camp-site-subtitle camp-site-subtitle-map">
      <h3 class="">地図</h3>
    </div>

  <hr>
  <hr>
  <hr>
  <div class="col-xs-12 camp-site-board-chat">
    <!-- キャンプ情報 -->
    <div class="col-xs-12 camp-site-show-info">
      <div class="col-xs-7">
        <h1><%= @camp_site.name %></h1>
      </div>
      <div class="col-xs-5 camp-site-like">
        <%= render 'like_camps/like_camp_site', camp_site: @camp_site %>
      </div>
      <div class="col-xs-12 camp-site-show-info-under">
        <p><%= @camp_site.address %></p>
        <p><%= @camp_site.category_name %></p>
        <p><%= @camp_site.introduction %></p>
      </div>
    </div>

    <!-- 掲示板 -->
    <div class="">
        <% @boards.each do |board| %>
      <div class="camp-site-board-index">
          <%= board.user.nickname %>
          <%= board.purpos_name %>
          <%= board.condition %>
          <%= board.date %>
          <%= board.time %>
          <%= board.place %>
          <%= link_to '詳細', board_path(board.id), class: "btn btn-primary" %>
          気になる数<%= board.like_boards.count %>
      </div>
        <% end %>
    </div>

      <!-- チャット -->
    <div class="camp-site-chat-index">
        <%# label nil, nil, 'コメント入力' %>
        <%# text_field nil, nil, 'data-behavior': 'room_speaker' %>
        <form>
          <input type="text" />
          <input type="submit" value="投稿" onClick="postChatMessage()" class="chat-button" />
        </form>
        <div class="camp-site-messages">
          <div id="messages" data-camp_site_id="<%= @camp_site.id %>" data-user_id="<%= current_user.id%>">
            <%= render @messages %>
          </div>
        </div>
    </div>

    <!-- 地図 -->
    <div id="camp-show-map">
    </div>

<script>
var map;
var marker;
var infoWindow;

function initMap(){
  map = new google.maps.Map(document.getElementById('camp-show-map'), {
  center: {lat: <%= @camp_site.latitude %>, lng: <%= @camp_site.longitude %>},
  zoom:15
  });
    //マーカー設置
    var address = {lat: <%= @camp_site.latitude %>, lng: <%= @camp_site.longitude %>};
    marker = new google.maps.Marker({
      map: map,
      position: address,
      });
}
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCsCJhG5dejpV82VY5PzaZG84RRqwFs2Y0&callback=initMap" async defer></script>

  </div>

  </div>
</div>
