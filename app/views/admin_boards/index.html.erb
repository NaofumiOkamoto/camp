<h1>管理者用掲示板一覧</h1>

<%= search_form_for @search, url: admin_boards_path do |f| %>
  <%= f.label :id_cont, "掲示板ID" %>
  <%= f.search_field :id_eq %>
  <%= f.collection_select :purpos_id_eq, @boards, :purpos_id, :purpos_name, :include_blank => '全目的' %>
  <%= f.date_field :date_eq %>
  <%= f.collection_select :camp_site_id_eq, @boards, :camp_site_id, :camp_site_id, :include_blank => '全キャンプ場' %>
  <%= f.submit "検索" %>
<% end %>

<table class="table">
  <tr>
    <td>id</td>
    <td>ユーザー</td>
    <td>日にち</td>
    <td>時間</td>
    <td>場所</td>
    <td>目的</td>
    <td>キャンプ場</td>
    <td>詳細</td>
    <td>条件</td>
    <td></td>
    <td></td>
  </tr>
  <% @search_boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.user.name %></td>
      <td><%= board.date %></td>
      <td><%= board.time %></td>
      <td><%= board.place %></td>
      <td><%= board.purpos_name %></td>
      <td><%= board.camp_site.name %></td>
      <td><%= board.detail %></td>
      <td><%= board.condition %></td>
      <td><%= link_to '詳細', admin_board_path(board.id), method: :get, class: "btn btn-info" %></td>
      <td><%= link_to '削除', admin_board_path(board.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>
