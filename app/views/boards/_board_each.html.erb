<div class="col-xs-2 col-xs-offset-1">
  <% if board.user.user_image.attached? %>
    <p><%= image_tag board.user.user_image, class: "chat-image" %></p>
  <% else %>
    <p><img src="/images/no_image.jpg" alt="" class="chat-image"></p>
  <% end %>
  <p><%= board.user.nickname %></p>
</div>
<div class="col-xs-6">
  <p class="board-p"><%= board.date %></p>
  <p class="board-p"><%= board.camp_site.name %></p>
  <p class="board-p"><%= board.purpos_name %></p>
</div>
<div class="col-xs-2">
  <div class="like-camp-like-button">気になる数<%= board.like_boards.count %></div>
</div>
