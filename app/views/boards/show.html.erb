<div class="container board-show-page">
  <h1>募集掲示板</h1>
  <div class="row">
    <!-- 閲覧履歴表示 -->
    <%= render '/history', recently_campsite: @recently_campsite %>

    <div class="clearfix">
      <div class="col-xs-12 board-show-head clearfix">
        <div class="col-xs-3 board-show-user">
          <p><%= image_tag @board.user.user_image, class: "board-user-image" %></p>
          <p>募集者<%= link_to @board.user.nickname, user_path(@board.user_id) %></p>
          <!--気になる掲示板にボタン -->
          <%= render 'like_boards/like_board', board: @board %>
        </div>
        <div class="col-xs-9 board-show-board">
          <p><span>日時      </span>   <%= @board.date %><%= @board.time %></p>
          <p><span>キャンプ場</span>   <%= @board.camp_site.name %></p>
          <p><span>場所      </span>   <%= @board.place %></p>
          <p><span>募集内容  </span>   <%= @board.purpos_name %></p>
          <p><span>詳細      </span>   <%= @board.detail %></p>
          <p><span>条件      </span>   <%= @board.condition %></p>
          <p><span>コメント  </span>   <%= @board.comment %></p>
        </div>
      </div>
    </div>

        <h3>イメージ画像</h3>
        <div class="board-images">
          <% if @board.board_images.attached? %>
            <% @board.board_images.each do |image| %>
              <%= image_tag image.variant(resize: "200x200") %>
            <% end %>
          <% else %>
            <img src="/assets/no_image.jpg" alt="" class="board-no-image">
          <% end %>
        </div>


    <h2>コメント欄</h2>
    <div class="board-comment-box">
    </div>
  </div>
</div>
