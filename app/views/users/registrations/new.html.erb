<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :都道府県 %><br />
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :prefecture_name %>
  </div>

  <div class="field">
    <%= f.label :キャンプスタイル %><br />
    <%= f.collection_select :style_id, Style.all, :id, :style_name %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_field :introduction, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :画像 %><br />
    <%= f.file_field :user_image %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
